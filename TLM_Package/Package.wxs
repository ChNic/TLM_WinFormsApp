<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"  xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui" >
  <Package Name="!(loc.ProductName)" 
           Manufacturer="!(loc.Manufacturer)"
           Version="1.0.1.0" 
           UpgradeCode="bb789032-e7d9-44ca-baa3-c16bbde69f98">
